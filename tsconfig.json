{
    "compilerOptions": {
        "lib": [
            "es2017"
        ],
        "moduleResolution": "node",
        "module": "commonjs",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks":  true,
        "target": "es2017",
        "noImplicitAny": false,
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": false,
        "listFiles": false,
        "rootDir": "./",
        "allowJs": true
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ],
    "include": [
        "app/**/*"
    ],
    "rules": {
        "no-console": false
        //Disable for typescript
    }
}
